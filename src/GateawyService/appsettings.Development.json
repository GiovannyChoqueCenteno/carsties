{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "IdentityServiceUrl" : "http://localhost:5000",
  "ReverseProxy": {
    "Routes": {
      "auctionsRead" : {
        "ClusterId": "auctions",
        "Match": {
          "Path": "/auctions/{**catch-all}",
          "Methods" : ["GET"]
        },
        "Transforms" : [
          {
            "PathPattern" : "api/auctions/{**cath-all}"
          }
        ]
      },
      "auctionsWrite" : {
        "ClusterId": "auctions",
        "Match": {
          "Path": "/auctions/{**catch-all}",
          "Methods" : ["PUT","POST","DELETE"]
        }, 
        "Transforms" : [
          {
            "PathPattern" : "api/auctions/{**cath-all}"
          }
        ]
      },
      "search" : {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/{**catch-all}",
          "Methods" : ["GET"]
        },
        "Transforms" : [
          {
            "PathPattern" : "api/search/{**cath-all}"
          }
        ]
      }
    },
    "Clusters": {
      "auctions": {
        "Destinations": {
          "auctionApi": {
            "Address": "http://localhost:7001/"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "http://localhost:7002/"
          }
        }
      }
    }
  }
}
